<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lut.teach.mapper.ex.CourseExMapper">


    <select id="selectAll" resultType="com.lut.teach.bean.ex.CourseEx">
         select * from briup_course
    </select>
    <select id="selectNameOrDescription" resultType="com.lut.teach.bean.ex.CourseEx">
        select * from briup_course where description like #{word} or name like #{word}
    </select>
    <select id="selectName" resultType="com.lut.teach.bean.ex.CourseEx">
        select * from briup_course where name like #{word}
    </select>
    <select id="selectDescription" resultType="com.lut.teach.bean.ex.CourseEx">
        select * from briup_course where description like #{word}
    </select>
</mapper>